<form action="/Usuario/Salvar" method="POST">

    <div class="form-group">
        <label asp-for="NomeUser">Nome:</label>
        <input asp-for="NomeUser" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DataNasc">Data nascimento:</label>
        <input asp-for="DataNasc" class="form-control">
    </div>
